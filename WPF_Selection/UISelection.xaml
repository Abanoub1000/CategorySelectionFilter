<Window x:Class="WPF_Selection.UISelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Selection"
             mc:Ignorable="d" 
             Title="UISelection" Height="600" Width="250"
             >

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
  <StackPanel x:Name="RadioButtonPanel" Margin="10,10,10,0" />
  <Button Content="Check Selected" Width="100" Height="30" Click="CheckSelectedButtion_Click" VerticalAlignment="Bottom" Margin="10,55,10,10" Grid.Row="1"/>

  </Grid>


</Window>
